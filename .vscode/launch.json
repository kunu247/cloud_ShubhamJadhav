{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "ðŸ§© FullStack Debug (Node + React)",
            "configurations": [
                "Debug Node API",
                "Debug React Client"
            ],
            "preLaunchTask": "npm: dev:full"
        }
    ],
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node API",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/app.js",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "NODE_ENV": "development",
                "DEBUG_MODE": "true",
                "PORT": "8065"
            },
            "console": "integratedTerminal",
            "restart": true,
            "autoAttachChildProcesses": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug React Client",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/client/src",
            "sourceMaps": true,
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ]
        }
    ]
}