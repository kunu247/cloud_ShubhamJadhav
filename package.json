{
  "name": "footware-management-software",
  "version": "2.0.0",
  "description": "A production-ready full-stack Footwear E-Commerce and Inventory Management System built with Node.js, Express, and Microsoft SQL Server. Includes JWT authentication, modular APIs, secure database integration, and built-in debugging and maintenance utilities for developers.",
  "main": "app.js",
  "scripts": {
    "//1": "ðŸš€ Production & Development Scripts",
    "start": "node app.js",
    "dev": "cross-env DEBUG_MODE=true nodemon app.js",
    "server": "cross-env HOST=0.0.0.0 PORT=8065 node app.js",
    "client": "cd client && cross-env VITE_HOST=0.0.0.0 VITE_PORT=5173 vite --host --open",
    "dev:full": "concurrently \"npm run server\" \"npm run client\"",
    "//2": "ðŸ”§ Route Inspection & Debugging Scripts",
    "routes": "node scripts/routes/inspect.js",
    "routes:debug": "cross-env DEBUG_MODE=true node -e \"require('./utils/routeDebugger')()\"",
    "routes:list": "node scripts/routes/list.js",
    "routes:stats": "node scripts/routes/stats.js",
    "routes:tree": "node scripts/routes/tree.js",
    "routes:export": "node scripts/routes/export.js",
    "routes:doc": "node scripts/routes/generate-docs.js",
    "routes:health": "node scripts/routes/health-check.js",
    "routes:validate": "node scripts/routes/validate.js",
    "//3": "ðŸ§ª Testing & Quality Assurance",
    "test": "node scripts/test-runner.js",
    "test:api": "node scripts/test-api.js",
    "test:db": "node -e \"require('./db/testConnection.js')\"",
    "test:routes": "node scripts/routes/test-endpoints.js",
    "test:coverage": "node scripts/test-coverage.js",
    "//4": "ðŸ› ï¸ Development Utilities",
    "debug": "cross-env DEBUG_MODE=true nodemon app.js",
    "inspect": "node scripts/dev/inspector.js",
    "audit": "node scripts/dev/security-audit.js",
    "deps:check": "npm ls --depth=0",
    "deps:audit": "npm audit",
    "deps:update": "npm update",
    "//5": "ðŸ—‘ï¸ Cleanup & Maintenance",
    "clean": "node scripts/cleanup.js",
    "clean:logs": "del /f /q logs\\*.* 2>nul || true",
    "clean:temp": "del /f /q temp\\*.* 2>nul || true",
    "clean:all": "npm run clean:logs && npm run clean:temp",
    "reset:env": "copy .env.example .env /Y",
    "reset:config": "node scripts/reset-config.js",
    "//6": "ðŸ“¦ Deployment & Release",
    "predeploy": "npm run clean:all && npm run test",
    "deploy:staging": "npm run predeploy && node scripts/deploy-staging.js",
    "deploy:production": "npm run predeploy && node scripts/deploy-production.js",
    "release": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "//7": "ðŸ“Š Monitoring & Logs",
    "logs": "node scripts/monitoring/view-logs.js",
    "logs:live": "node scripts/monitoring/live-logs.js",
    "logs:errors": "node scripts/monitoring/error-logs.js",
    "logs:routes": "node scripts/monitoring/route-logs.js",
    "status": "node scripts/monitoring/system-status.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-fileupload": "^1.5.2",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "mssql": "^10.0.1",
    "short-unique-id": "^5.0.3"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "nodemon": "^3.0.3"
  },
  "keywords": [
    "ecommerce",
    "footwear",
    "inventory",
    "management",
    "express",
    "mssql",
    "api",
    "jwt",
    "authentication",
    "debugging",
    "routes",
    "monitoring"
  ],
  "author": "Developer Kali",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "your-repository-url-here"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}